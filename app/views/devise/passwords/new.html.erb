<div class="card">
    <div class="card-body d-flex justify-content-center">
      <h1 class="card-title display-6"> Forgot your password? </h1>
    </div>

    <div class="card-body d-flex justify-content-center">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"mb-3 form-control" %>
      </div>  

      <div class="actions d-flex justify-content-center">
        <%= f.submit "Send me reset password instructions", class:"btn btn-primary" %>
      </div>


    <div class="card-body d-flex justify-content-center">
      <%= link_to "Sign up", new_registration_path(resource_name), class: "btn btn-link mb-3 text-decoration-none" %>
      <%= link_to "Log in", new_session_path(resource_name), class: "btn btn-link mb-3 text-decoration-none" %>
    </div>
  </div>

<% end %>