<div class="card">
    <div class="card-body d-flex justify-content-center">
      <h1 class="card-title display-6"> Sign up </h1>
    </div>

    <div class="card-body d-flex justify-content-center">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
    
        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"mb-3 form-control" %>
        </div>
   
      <div class="d-flex justify-content-center">
        <div class="field">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(min. <%= @minimum_password_length %> characters)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class:"mb-3 form-control" %>
        </div>
      </div>

      <div class="d-flex justify-content-center">
        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"mb-3 form-control" %>
        </div>
      </div>
      <div class="actions d-flex justify-content-center">
        <%= f.submit "Sign up", class:"btn btn-primary" %>
      </div>

    <div class="card-body d-flex justify-content-center">
      <%= link_to "Log in", new_session_path(resource_name), class: "btn btn-link mb-3 text-decoration-none" %>
    </div>
</div>  
      <% end %>
